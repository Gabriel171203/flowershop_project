{
  "version": 2,
  "builds": [
    {
      "src": "*.{js,html,css}",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "products.html",
      "use": "@vercel/static"
    },
    {
      "src": "about.html",
      "use": "@vercel/static"
    },
    {
      "src": "contact.html",
      "use": "@vercel/static"
    },
    {
      "src": "thank-you.html",
      "use": "@vercel/static"
    },
    {
      "src": "pending-payment.html",
      "use": "@vercel/static"
    },
    {
      "src": "style.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/products", "dest": "/products.html" },
    { "src": "/about", "dest": "/about.html" },
    { "src": "/contact", "dest": "/contact.html" },
    { "src": "/thank-you", "dest": "/thank-you.html" },
    { "src": "/pending-payment", "dest": "/pending-payment.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
