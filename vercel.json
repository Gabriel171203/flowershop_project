{
  "version": 2,
  "builds": [
    {
      "src": "*.{js,html,css}",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/products", "dest": "/products.html" },
    { "src": "/products.html", "status": 301, "headers": { "Location": "/products" } },
    { "src": "/about", "dest": "/about.html" },
    { "src": "/about.html", "status": 301, "headers": { "Location": "/about" } },
    { "src": "/contact", "dest": "/contact.html" },
    { "src": "/contact.html", "status": 301, "headers": { "Location": "/contact" } },
    { "src": "/thank-you", "dest": "/thank-you.html" },
    { "src": "/pending-payment", "dest": "/pending-payment.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "rewrites": [
    { "source": "/products", "destination": "/products.html" },
    { "source": "/about", "destination": "/about.html" },
    { "source": "/contact", "destination": "/contact.html" },
    { "source": "/thank-you", "destination": "/thank-you.html" },
    { "source": "/pending-payment", "destination": "/pending-payment.html" }
  ]
}
